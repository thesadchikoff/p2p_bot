		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"strict": true
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
